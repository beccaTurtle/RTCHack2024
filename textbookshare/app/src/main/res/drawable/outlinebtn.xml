<!-- res/drawable/button_custom.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Outer background with black outline -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent inner color -->
            <stroke android:color="#000000" android:width="2dp" /> <!-- Black outline color and width -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius if needed -->
        </shape>
    </item>
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <!-- Inner background to create the outline effect -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White color for inner background -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius if needed -->
        </shape>
    </item>
</layer-list>
