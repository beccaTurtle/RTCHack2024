<!-- res/drawable/button_outline.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Background color of the button -->
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#Afff" />
            <corners android:radius="8dp" /> <!-- You can adjust the corner radius -->
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <!-- Outline color and thickness -->
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#Afff" />
            <stroke android:color="#fff" android:width="2dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
